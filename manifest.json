{
  "manifest_version": 3,
  "name": "温柔陪伴助手",
  "version": "1.1.0",
  "description": "在浏览器中添加一位温柔体贴的伴侣，陪伴您的浏览时光。支持多种互动功能，包括区域截图功能，让网页浏览更加有趣！",
  "permissions": ["activeTab", "storage", "tabs", "scripting", "webRequest"],
  "host_permissions": [
    "<all_urls>",
    "https://api.effiy.cn/*",
    "https://api.effiy.cn/*"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/config.js",
        "src/shared/lib/md5.js",
        "src/shared/api/tokenUtils.js",
        "src/shared/utils/imageResourceManager.js",
        "src/shared/utils/loadingAnimationMixin.js",
        "src/shared/api/baseApiManager.js",
        "src/shared/utils/loadingAnimation.js",
        "src/shared/api/sessionApi.js",
        "src/shared/utils/sessionManager.js",
        "src/shared/api/faqApi.js",
        "src/shared/lib/turndown.js",
        "src/shared/lib/marked.min.js",
        "src/shared/lib/vue/vue.global.js",
        "src/shared/lib/html2canvas.min.js",
        "src/features/chat/export-chat-to-png.js",
        "src/shared/utils/loggerUtils.js",
        "src/shared/utils/errorHandler.js",
        "src/shared/utils/domHelper.js",
        "src/content/bootstrap.js",
        "src/features/pet/petManager.core.js",
        "src/features/pet/petManager.auth.js",
        "src/features/pet/petManager.roles.js",
        "src/features/pet/petManager.robot.js",
        "src/features/pet/petManager.ai.js",
        "src/features/pet/petManager.sessionEditor.js",
        "src/features/pet/petManager.requestEditor.js",
        "src/features/pet/petManager.editor.js",
        "src/features/pet/petManager.mermaid.js",
        "src/features/pet/petManager.tags.js",
        "src/features/pet/petManager.parser.js",
        "src/features/pet/petManager.io.js",
        "src/features/faq/faq.js",
        "src/features/faq/tags.js",
        "src/features/pet/petManager.messaging.js",
        "src/features/pet/petManager.pageInfo.js",
        "src/features/pet/petManager.session.js",
        "src/components/pet/SessionItem/hooks/store.js",
        "src/components/pet/SessionItem/hooks/useComputed.js",
        "src/components/pet/SessionItem/hooks/useMethods.js",
        "src/components/pet/SessionItem/index.js",
        "src/components/pet/SessionList/index.js",
        "src/components/pet/ChatWindow/hooks/store.js",
        "src/components/pet/ChatWindow/hooks/useComputed.js",
        "src/components/pet/ChatWindow/hooks/useMethods.js",
        "src/components/pet/SessionSidebar/hooks/store.js",
        "src/components/pet/SessionSidebar/hooks/useComputed.js",
        "src/components/pet/SessionSidebar/hooks/useMethods.js",
        "src/components/pet/ChatHeader/index.js",
        "src/components/pet/SessionSearch/index.js",
        "src/components/pet/TagFilter/index.js",
        "src/components/pet/BatchToolbar/index.js",
        "src/components/pet/ChatInput/index.js",
        "src/components/pet/SessionSidebar/index.js",
        "src/components/pet/ChatMessages/index.js",
        "src/components/pet/ChatWindow/index.js",
        "src/features/pet/petManager.ui.js",
        "src/features/pet/petManager.drag.js",
        "src/features/pet/petManager.pet.js",
        "src/features/pet/petManager.state.js",
        "src/features/pet/petManager.chat.js",
        "src/features/pet/petManager.chatUi.js",
        "src/features/pet/petManager.events.js",
        "src/features/pet/petManager.comment.js",
        "src/features/pet/petManager.media.js",
        "src/features/pet/petManager.message.js",
        "src/features/pet/petManager.screenshot.js",
        "src/features/pet/petManager.js",
        "src/content/index.js"
      ],
      "css": [
        "src/styles/tailwind.css",
        "src/styles/content.css",
        "src/styles/quick-comment.css",
        "src/components/pet/ChatWindow/index.css",
        "src/components/pet/SessionSidebar/index.css",
        "src/components/pet/SessionItem/index.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/views/popup/index.html",
    "default_title": "伴侣控制面板"
  },
  "commands": {
    "toggle-pet": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "切换宠物显示/隐藏"
    },
    "change-color": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "切换宠物颜色"
    },
    "reset-position": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "重置宠物位置"
    },
    "open-quick-comment": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "打开添加评论弹框"
    }
  },
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "32": "src/assets/icons/icon32.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/icons/icon.png",
        "src/assets/images/*/icon.png",
        "src/assets/images/*/run/*.png",
        "src/shared/lib/mermaid.min.js",
        "src/features/mermaid/load-mermaid.js",
        "src/features/mermaid/render-mermaid.js",
        "src/features/mermaid/preview-mermaid.js",
        "src/shared/lib/jszip.min.js",
        "src/features/session/load-jszip.js",
        "src/features/session/export-sessions.js",
        "src/features/session/import-sessions.js",
        "src/components/pet/ChatWindow/index.html",
        "src/components/pet/ChatHeader/index.html",
        "src/components/pet/SessionSidebar/index.html",
        "src/components/pet/SessionItem/index.html",
        "src/components/pet/SessionSearch/index.html",
        "src/components/pet/SessionList/index.html",
        "src/components/pet/TagFilter/index.html",
        "src/components/pet/BatchToolbar/index.html",
        "src/components/pet/ChatInput/index.html",
        "src/components/pet/ChatMessages/index.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
